---
import { getEntry } from "astro:content";
import Card from "@components/Card.vue";

interface Props {
  className: string;
  identifier: string;
}

const { className, identifier } = Astro.props;
const entry = await getEntry("partner-collections", identifier);

const title = entry.data.title_info_primary_ssi;
const linkText = "All items";
const linkHref = `/partner-collections/${entry.id}`;
const image = `https://iiif.digitalcommonwealth.org/iiif/2/${entry.data.exemplary_image_ssi}/full/pct:25/0/default.jpg`;
---

<Card
  client:visible
  className={className}
  title={title}
  link={{
    href: linkHref,
    text: linkText
  }}
  image={image}
/>
